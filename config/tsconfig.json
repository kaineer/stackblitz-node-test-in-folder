{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es2018",

    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,

    "outDir": "../dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../src/**/test/*.test.ts"]
}
